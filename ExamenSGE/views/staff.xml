<odoo>
    <!--Management-->

    <menuitem id="management_menu" name="Management Employee" parent="staff_menu" action="management_list_action" />

    <record model="ir.ui.view" id="management_form_view">
        <field name="name">management.form</field>
        <field name="model">naturalP.management</field>
        <field name="arch" type="xml">
            <form string="MANAGEMENT FORM VIEW">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="dni" />
                        <field name="security" />
                        <field name="address" />
                        <field name="mobile" />
                        <field name="telephone" />
                        <field name="natural_park_id" />
                        <field name="salary" options='{"type": "number", "step": 1000}' />
                        <field name="tickets" options='{"type": "number", "step": 1}' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="management_tree_view">
        <field name="name">management.tree</field>
        <field name="model">naturalP.management</field>
        <field name="arch" type="xml">
            <tree string="MANAGEMENTTREE VIEW">
                <field name="name" />
                <field name="dni" />
                <field name="security" />
                <field name="address" />
                <field name="mobile" />
                <field name="telephone" />
                <field name="natural_park_id" />
                <field name="salary" />
                <field name="tickets" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="management_list_action">
        <field name="name">Management</field>
        <field name="res_model">naturalP.management</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>NEW MANAGEMENT</p>
        </field>
    </record>

