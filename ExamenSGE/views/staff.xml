    <record model="ir.ui.view" id="conservation_search_view">
        <field name="name">conservation.search</field>
        <field name="model">naturalP.conservation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="dni" />
                <field name="security" />
                <filter name="cleaning" string="Cleaning" domain="[('special_field', '=', 'cleaning')]" />
                <filter name="roads" string="Roads" domain="[('special_field', '=', 'roads')]" />
                <group string="Group By">
                    <filter name="by_natural_park" string="Natural Park" context="{'group_by': 'natural_park_id'}" />
                </group>
            </search>
        </field>
    </record>

